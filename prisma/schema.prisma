// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  stores        Store[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Store {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  subdomain   String      @unique
  description String?
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  products    Product[]
  orders      Order[]
  theme       StoreTheme?
  settings    StoreSettings?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model StoreTheme {
  id              String  @id @default(cuid())
  storeId         String  @unique
  store           Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  primaryColor    String  @default("#0ea5e9")
  secondaryColor  String  @default("#64748b")
  backgroundColor String  @default("#ffffff")
  textColor       String  @default("#1e293b")
  logo            String?
  favicon         String?
  backgroundImage String?
  customCSS       String? @db.Text
}

model StoreSettings {
  id                String  @id @default(cuid())
  storeId           String  @unique
  store             Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  currency          String  @default("USD")
  allowCoupons      Boolean @default(true)
  enableGuestCheckout Boolean @default(true)
  emailNotifications Boolean @default(true)
  supportEmail       String?
  socialLinks       Json?   // { twitter, facebook, instagram, etc }
  seo               Json?   // { title, description, keywords }
}

model Product {
  id          String          @id @default(cuid())
  name        String
  slug        String
  description String?         @db.Text
  price       Decimal
  comparePrice Decimal?        @db.Decimal(10, 2)
  storeId     String
  store       Store           @relation(fields: [storeId], references: [id], onDelete: Cascade)
  category    String?
  tags        String[]
  featured    Boolean        @default(false)
  status      ProductStatus  @default(DRAFT)
  variants    ProductVariant[]
  files       ProductFile[]
  orders      OrderItem[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([storeId, slug])
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  name        String
  value       String
  priceAdjust Decimal  @default(0) @db.Decimal(10, 2)
  inventory   Int      @default(-1) // -1 for unlimited
  sku         String?
  orders      OrderItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([productId, name, value])
}

model ProductFile {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  name      String
  url       String
  size      Int
  type      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique
  total         Decimal     @db.Decimal(10, 2)
  subtotal      Decimal     @db.Decimal(10, 2)
  tax           Decimal     @db.Decimal(10, 2) @default(0)
  shipping      Decimal     @db.Decimal(10, 2) @default(0)
  discount      Decimal     @db.Decimal(10, 2) @default(0)
  status        OrderStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod String?
  paymentIntentId String?
  customerEmail String
  customerName  String?
  notes         String?     @db.Text
  storeId       String
  store         Store       @relation(fields: [storeId], references: [id])
  items         OrderItem[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id         String          @id @default(cuid())
  orderId    String
  order      Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId  String
  product    Product         @relation(fields: [productId], references: [id])
  variantId  String?
  variant    ProductVariant? @relation(fields: [variantId], references: [id])
  quantity   Int
  price      Decimal         @db.Decimal(10, 2)
  total      Decimal         @db.Decimal(10, 2)
  createdAt  DateTime        @default(now())
}

model Customer {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  firstOrder DateTime?
  lastOrder DateTime?
  totalSpent Decimal  @default(0) @db.Decimal(10, 2)
  orders    Order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Analytics {
  id         String   @id @default(cuid())
  storeId    String
  date       DateTime @default(now())
  revenue    Decimal  @default(0) @db.Decimal(10, 2)
  orders     Int      @default(0)
  visitors   Int      @default(0)
  pageviews  Int      @default(0)
  conversion Decimal  @default(0) @db.Decimal(5, 4)
  data       Json?    // Additional analytics data

  @@unique([storeId, date])
}

model Coupon {
  id        String       @id @default(cuid())
  code      String       @unique
  storeId   String
  type      CouponType
  value     Decimal      @db.Decimal(10, 2)
  minAmount Decimal?     @db.Decimal(10, 2)
  usage     Int          @default(0)
  maxUsage  Int?
  expiresAt DateTime?
  isActive  Boolean      @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum CouponType {
  PERCENTAGE
  FIXED
}